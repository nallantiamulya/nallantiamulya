#include<stdio.h>
void main()
{
    int h=3;
    int m=45;
    int s=0;
    while(1)
    {
        printf("\n\n\n\t\t\t %2d : %2d :%2d",h,m,s);
        system("cls");
        sleep(1);
        s=s+1;
        if(s==60)
        {
            s=0;
            m=m+1;
        }
        else if(m==60)
        {
            s=0;
            m=0;
            h=h+1;
        }
        else if(h==12)
        {
            s=0;
            m=0;
            h=0;
        }
    }
}
}
