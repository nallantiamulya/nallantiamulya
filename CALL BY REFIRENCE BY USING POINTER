#include<stdio.h>
int main()
{
    int *p,a=5;
    p=&a;
    printf("%d\n",a);
    printf("%p\n",p);
    printf("%d\n",*p);
}

*********************************************************************************************

#include<stdio.h>
int main()
{
    int **y,*p,a=5;
    p=&a;
    y=&p;
    printf("%d\n",a);
    printf("%p\n",p);
    printf("%d\n",**y);
}

*********************************************************************************************

#include<stdio.h>
int main()
{
    int *p,*q,a=5,b=4;
    p=&a;
    q=&b;
    printf("%d and %d\n",a,b);
    printf("%p\n",p);
    printf("%d\n",q);
}
