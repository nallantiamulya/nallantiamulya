// decimal to binary
#include<stdio.h>
void main()
{
    int n,b[32],i;
    printf("Enter decimal:");
    scanf("%d",&n);
    i=0;
    while(n>0)
    {
        b[i++]=n%2;
        n=n/2;
    }
    printf("the binary number is :");
    for(int j=i-1;j>=0;j--)
    {
        printf("%d",b[j]);
    }

}
